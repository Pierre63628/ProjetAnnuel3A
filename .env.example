# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=rootpass
DB_NAME=nextdoorbuddy

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
# For Gmail, use smtp.gmail.com with app password
# For other providers, adjust accordingly
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Branding
FROM_EMAIL=noreply@doorbudy.cloud
FROM_NAME=DoorBudy

# Email Verification Settings
VERIFICATION_CODE_EXPIRY=15
MAX_VERIFICATION_ATTEMPTS=3
MAX_RESEND_ATTEMPTS=3

# Application Settings
NODE_ENV=development
PORT=3000

# Frontend URL (for development)
VITE_API_URL=http://localhost:3000

# Instructions for Email Setup:
# 
# Gmail Setup:
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an app password: https://myaccount.google.com/apppasswords
# 3. Use your Gmail address as SMTP_USER
# 4. Use the generated app password as SMTP_PASS
#
# Other SMTP Providers:
# - SendGrid: smtp.sendgrid.net, port 587
# - Mailgun: smtp.mailgun.org, port 587
# - AWS SES: email-smtp.region.amazonaws.com, port 587
# - Outlook: smtp-mail.outlook.com, port 587
#
# For production, consider using dedicated email services like:
# - SendGrid (free tier: 100 emails/day)
# - Mailgun (free tier: 5,000 emails/month)
# - AWS SES (pay-as-you-go)
