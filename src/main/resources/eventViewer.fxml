<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.esgi.scraper.interfaces.EventViewController"
           stylesheets="/styles/application.css">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Fichier">
                    <MenuItem text="Quitter" onAction="#handleExit"/>
                </Menu>
                <Menu text="Aide">
                    <MenuItem text="À propos" onAction="#handleAbout"/>
                </Menu>
            </MenuBar>
            <ToolBar styleClass="toolbar">
                <Button fx:id="refreshButton" text="Rafraîchir les événements" onAction="#handleRefresh" styleClass="refresh-button">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <Image url="@/images/refresh.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Separator orientation="VERTICAL" />
                <Label text="Filtrer par source:" />
                <Button fx:id="allSourcesButton" text="Tous" onAction="#handleAllSources" styleClass="filter-button" />
                <Separator orientation="VERTICAL" />
                <ProgressBar fx:id="progressBar" progress="0.0" visible="false" prefWidth="200"/>
                <Label fx:id="statusLabel" text="Prêt" />
            </ToolBar>
            <ToolBar styleClass="toolbar">
                <Label text="Rechercher:" />
                <TextField fx:id="searchField" promptText="Nom de l'événement" prefWidth="200" onKeyReleased="#handleSearch" />
                <Separator orientation="VERTICAL" />
                <Label text="Filtrer par date:" />
                <DatePicker fx:id="datePicker" promptText="Sélectionner une date" onAction="#handleDateFilter" />
                <Button fx:id="clearDateButton" text="Effacer" onAction="#handleClearDateFilter" styleClass="filter-button" />
            </ToolBar>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.3">
            <VBox>
                <Label text="Liste des événements" styleClass="section-header">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </Label>
                <ListView fx:id="eventListView" VBox.vgrow="ALWAYS" styleClass="event-list"/>
            </VBox>
            <VBox spacing="15" styleClass="details-panel">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <!-- Header Section -->
                <VBox spacing="8" styleClass="details-header-section">
                    <Label text="Détails de l'événement" styleClass="details-main-header"/>
                    <Separator styleClass="header-separator"/>
                </VBox>

                <!-- Image Section -->
                <VBox alignment="CENTER" styleClass="image-section">
                    <ImageView fx:id="eventImageView" fitWidth="300" fitHeight="200" preserveRatio="true" styleClass="event-image"/>
                </VBox>

                <!-- Details Grid Section -->
                <VBox spacing="12" styleClass="details-content-section">
                    <GridPane fx:id="eventDetailsGrid" hgap="15" vgap="12" styleClass="details-grid">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="100" prefWidth="120"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="detail-label"/>
                        <Label fx:id="eventNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="detail-value detail-name"/>

                        <Label text="Date :" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="detail-label"/>
                        <Label fx:id="eventDateLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="detail-value"/>

                        <Label text="Lieu :" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="detail-label"/>
                        <Label fx:id="eventLocationLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="detail-value"/>
                    </GridPane>

                    <!-- Action Button Section -->
                    <HBox alignment="CENTER" spacing="10" styleClass="action-section">
                        <padding>
                            <Insets top="10" right="0" bottom="5" left="0"/>
                        </padding>
                        <Button fx:id="openUrlButton" text="Ouvrir l'événement" styleClass="action-button" onAction="#handleOpenEvent" disable="true"/>
                    </HBox>
                </VBox>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" styleClass="status-bar">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
            <Label fx:id="eventCountLabel" text="0 événements chargés"/>
        </HBox>
    </bottom>
</BorderPane>
